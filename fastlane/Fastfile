# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Testing SDK's demo project to make sure PixleeSDK has no erros."

  desc "Setting up circleci"
  before_all do
    setup_circle_ci
  end
  
  lane :test do
    desc "Test ExamplePod"
    run_tests(project: "Example/ExamplePod.xcworkspace",
      devices: ["iPhone 13 Pro"],
      scheme: "ExampleUITests")
    
      desc "Test Example"
    run_tests(
      project: 'Example/Example.xcodeproj',
      devices: ["iPhone 13 Pro"],
      scheme: "ExampleUITests")
  end
  
  lane :screenshots do
    desc "Screenshot ExamplePod"
    capture_screenshots(workspace: "Example/ExamplePod.xcworkspace",
      scheme: "UITests",
      sdk: "iphonesimulator")

    desc "Screenshot Example"
    capture_screenshots(project: "Example/Example.xcodeproj",
                        scheme: "UITests",
                        sdk: "iphonesimulator")
  end

end




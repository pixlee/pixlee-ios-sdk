# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Description of before_all do"
  before_all do
    setup_circle_ci
  end
  
  lane :test do
    run_tests(workspace: "Example/ExamplePod.xcworkspace",
                devices: ["iPhone 8"],
                scheme: "ExampleUITests")
  end
  
  lane :screenshots do
    capture_screenshots(workspace: "Example/ExamplePod.xcworkspace",
                        scheme: "UITests",
                        sdk: "iphonesimulator")
  end

end




# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Testing SDK's demo project to make sure PixleeSDK has no erros."
  before_all do
    setup_circle_ci
  end

  # download all certs
  lane :download_all_certs do |_params|
    auth_cert()
  end

  lane :cocoapods_build do |params|
    make_build(params)
  end

  def auth_cert()
    app_store_connect_api_key(
      key_id: 'Y7VLX4CHZ6',
      issuer_id: '69a6de88-a688-47e3-e053-5b8c7c11a4d1',
      key_filepath: './AuthKey.p8',
      duration: 1200, # optional (maximum 1200)
      in_house: false # optional but may be required if using match/sigh
    )

    match(type: 'development', platform: 'ios', app_identifier: 'com.pixlee.pixlee-ios-sdk-example')
    match(type: 'adhoc', platform: 'ios', app_identifier: 'com.pixlee.pixlee-ios-sdk-example')
#     match(type: 'appstore', platform: 'ios', app_identifier: 'com.pixlee.pixlee-ios-sdk-example')
  end

  def make_build(params)
    auth_cert()
    build_ios_app(
      scheme: 'Example',
      workspace: 'Example/ExamplePod.xcworkspace',
      configuration: 'Debug',
      clean: true,
      xcargs: '-allowProvisioningUpdates',  # use Xcodeâ€™s Automatically Manage Signing feature. By default, automatic signing via xcodebuild is disabled. To enable it, pass -allowProvisioningUpdates via the xcargs option
      sdk: 'iphoneos15.5',
      output_directory: 'appDistribution',  # Destination directory. Defaults to current directory.
      output_name: 'sdk_size.ipa',
      skip_profile_detection: true,
      export_team_id: 'Q28M29YQL8',
      export_method: params[:export_method]
    )
  end

  lane :spm_sdk_test do
    desc "Test Swift Package Manager"
      run_tests(
        project: 'Example/ExampleSPM.xcodeproj',
        devices: ["iPhone 13 Pro"],
        scheme: "ExampleUITests")
  end

  lane :spm_sdk_screenshot do
    desc "Screenshot Swift Package Manager"
    capture_screenshots(project: "Example/ExampleSPM.xcodeproj",
                        scheme: "ExampleUITests",
                        sdk: "iphonesimulator")
  end

  lane :carthage_sdk_test do
    desc "Test Carthage"
    run_tests(
      project: 'Example/ExampleCarthage.xcodeproj',
      devices: ["iPhone 13 Pro"],
      scheme: "ExampleUITests")
  end

  lane :carthage_sdk_screenshot do
    desc "Screenshot Carthage"
    capture_screenshots(project: "Example/ExampleCarthage.xcodeproj",
                        scheme: "ExampleUITests",
                        sdk: "iphonesimulator")
  end
  
  lane :cocoapods_sdk_test do
    desc "Test Cocoapods"
    run_tests(
      workspace: 'Example/ExamplePod.xcworkspace',
      devices: ["iPhone 13 Pro"],
      scheme: "ExampleUITests")
  end

  lane :cocoapods_sdk_screenshot do
    desc "Screenshot Cocoapods"
    capture_screenshots(workspace: "Example/ExamplePod.xcworkspace",
                        scheme: "ExampleUITests",
                        sdk: "iphonesimulator")
  end
end



